@model IEnumerable<ShowAllFavoriteUserStocksServiceViewModel>

@{
    ViewData["Title"] = "ShowAllStocks";

    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}


<h1>My Stocks</h1>
<br />
<br />


<div class="row">
    @foreach (var item in Model)
    {

        <div class="card text-white bg-dark mb-3" style="max-width: 20rem; margin-right:7em">
            <div class="card-header">@item.Name</div>
            <div class="card-body">
                <h4 class="card-title">@item.Price</h4>
                <p class="card-text">@item.Description</p>
                <a href="~/Images/@item.Picture" style="float:right">
                    <img src="~/Images/@item.Picture" width="80" height="80">
                </a>
                <button type="button" class="btn btn-outline-success">
                    <a asp-controller="Everything" asp-action="EditMyStock" asp-route-id="@item.Id">Edit</a>
                </button>

                <button type="button" class="btn btn-outline-warning">
                    <a asp-controller="Everything" asp-action="DeleteMyStock" asp-route-id="@item.Id">Delete</a>
                </button>
                <button type="button" class="btn btn-outline-info">
                    <a asp-controller="Everything" asp-action="MyStockDetails" asp-route-id="@item.Id">Details</a>
                </button>

            </div>

        </div>
    }
</div>
    <partial name="_pagerMyStock" model="@pager" />